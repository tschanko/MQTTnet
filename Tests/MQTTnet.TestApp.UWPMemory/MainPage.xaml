<Page
    x:Class="MQTTnet.TestApp.UWPMemory.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <Button Content="Setup" Click="ButtonBase_OnClick" Height="60" Width="120" Margin="10"/>
            <Button Content="Send 5000" Click="ButtonSend_OnClick" Height="60" Width="120" Margin="10"/>
            <Button Content="Send 50000" Click="ButtonSendLoads_OnClick" Height="60" Width="120" Margin="10"/>
            <TextBlock>
                <Run Text="Duration:"/>
                <Run Text="{x:Bind Duration, Mode=OneWay}"/>
            </TextBlock>
        </StackPanel>
        
    </Grid>
</Page>
